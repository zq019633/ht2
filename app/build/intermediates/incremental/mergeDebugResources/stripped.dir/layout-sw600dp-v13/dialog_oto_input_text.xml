<?xml version="1.0" encoding="utf-8"?>
                                                                   
    

           
    <RelativeLayout
            android:id="@+id/parent_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:tag="layout-sw600dp/dialog_oto_input_text_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
                android:id="@+id/ll_button_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@dimen/dp_5"
                android:background="@color/white"
        >
            <ImageView
                    android:id="@+id/soft_down_iv"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:src="@mipmap/live_one_to_one_soft_down"/>
            <com.talkfun.cloudlive.view.ClearEditText
                    android:id="@+id/edtInput"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:textColorHint="#525E72"
                    android:hint="@string/chat_message_tips"
                    android:imeOptions="actionSend|flagNoExtractUi"
                    android:textColor="@color/black"
                    android:background="@drawable/dialog_msg_clear_text_view"
                    android:textSize="14sp"/>

            <Button
                    android:id="@+id/send_message_btn"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:text="@string/btn_send"
                    android:textColor="@color/white"
                    android:enabled="false"
                    android:textSize="@dimen/sp_8"
                    android:background="@drawable/send_btn_bg"
            />
        </LinearLayout>
    </RelativeLayout>
         