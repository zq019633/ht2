<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/splash_logo" />

    <Button
        android:id="@+id/live_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/icon"
        android:layout_alignLeft="@id/icon"
        android:layout_alignRight="@id/icon"
        android:layout_alignStart="@id/icon"
        android:layout_above="@+id/play_back"
        android:layout_margin="@dimen/splash_button_margin"
        android:background="@drawable/round_button"
        android:text="@string/live_in"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/play_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/icon"
        android:layout_alignLeft="@id/icon"
        android:layout_alignRight="@id/icon"
        android:layout_alignStart="@id/icon"
        android:background="@drawable/round_button"
        android:text="@string/play_back"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/splash_tip_marginBottom"
        android:layout_marginLeft="@dimen/splash_button_margin"
        android:layout_marginRight="@dimen/splash_button_margin"
        android:layout_marginTop="@dimen/splash_button_margin"
        android:visibility="gone"
       />

    <ImageView
        android:id="@+id/iv_app_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/splash_tip_marginBottom"
        android:src="@mipmap/splash_tip"
        />
</RelativeLayout>