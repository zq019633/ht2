<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <RelativeLayout
        android:id="@+id/parent_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="layout/dialog_oto_input_text_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/ll_button_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignBottom="@dimen/dp_8"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <ImageView
                android:id="@+id/soft_down_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/live_one_to_one_soft_down" />

            <com.talkfun.cloudlive.view.ClearEditText
                android:id="@+id/edtInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/dialog_msg_clear_text_view"
                android:gravity="center_vertical"
                android:hint="@string/chat_message_tips"
                android:imeOptions="actionSend|flagNoExtractUi"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:textColorHint="#525E72"
                android:textSize="14sp" />

            <Button
                android:id="@+id/send_message_btn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/send_btn_bg"
                android:enabled="false"
                android:text="@string/btn_send"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>
         