<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/room_new_skin_bg"
    >

    <ListView
        android:id="@+id/chat_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="@dimen/chat_list_dividerHeight"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="@dimen/chat_list_padding"
        android:paddingRight="@dimen/chat_list_padding"
        android:paddingTop="@dimen/chat_list_padding" />

    <include
        layout="@layout/reply_tip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>

</RelativeLayout>