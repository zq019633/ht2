<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/gradient_bg_bottom">


    <com.talkfun.cloudlive.view.FullScreenInputBarView
        android:id="@+id/ll_input_fullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fullScreen_input_marginLeft"
        android:layout_marginRight="@dimen/fullScreen_input_marginRight"
        android:layout_toLeftOf="@+id/ll_bottom_menu"
       ></com.talkfun.cloudlive.view.FullScreenInputBarView>

    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/network_choice_iv"
            style="@style/menu_image_style"
            android:src="@mipmap/net_status_icon" />

        <ImageView
            android:id="@+id/iv_danmu_switch"
            style="@style/menu_image_style"
            android:src="@drawable/danmu_selected" />

        <ImageView
            android:id="@+id/fullScreen_iv"
            style="@style/menu_image_style"
            android:layout_alignParentRight="true"
            android:src="@mipmap/full_screen" />
    </LinearLayout>
</RelativeLayout>
