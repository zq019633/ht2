<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:background="@color/guide_bg"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="wrap_content" android:layout_height="@dimen/dp_100"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="@+id/guideline2"
    >
        <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/instructions_iv"
                android:src="@mipmap/activity_live_one_to_one_guide_one_instructions"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
        />
        <ImageView
                android:id="@+id/next_iv"
                android:src="@mipmap/activity_live_one_to_one_guide_one_next"
                android:layout_below="@+id/instructions_iv"
                android:layout_marginTop="@dimen/dp_12"
                android:scaleType="centerInside"
                android:layout_width="@dimen/dp_120" android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_10"/>

        <ImageView
                android:id="@+id/arrow_iv"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/instructions_iv"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@mipmap/activity_live_one_to_one_guide_one_arraw_phone"
                android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_26"
        />

    </RelativeLayout>
    <ImageView
            android:id="@+id/media_iv"
            android:src="@mipmap/activity_live_one_to_one_guide_one_midea"
            android:layout_width="@dimen/dp_65"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_30"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="@+id/guideline2"
            />

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_end="@dimen/dp_40"
    />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_end="@dimen/dp_80"
    />
    <!--  app:layout_constraintGuide_percent="0.723"-->

</android.support.constraint.ConstraintLayout>