<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/dp_55"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/iv_operator_audio"
            style="@style/activity_one_to_multi_draw_style"
            android:src="@drawable/audio_select"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_operator_video"
            style="@style/activity_one_to_multi_draw_style"
            android:paddingTop="@dimen/dp_2"
            android:visibility="gone"
            android:src="@drawable/video_select" />

        <FrameLayout
            android:id="@+id/fl_orperator_rtc_cancel"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:visibility="gone">
            <com.talkfun.widget.RippleView
                android:id="@+id/ripple_view_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rCirCilePercent="0.5"
                app:rColor="#3B97FF" />
            <com.talkfun.widget.HoloView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                app:ringWidthPercent="0"
                app:text="@string/activity_live_one_to_multi_left_cancel"
                app:textBgColorEnd="#20D1FF"
                app:textBgColorStart="#3B97FF"
                app:textColor="@color/white"
                app:textSize="@dimen/sp_10" />
        </FrameLayout>


        <com.talkfun.widget.HoloView
            android:id="@+id/iv_orperator_rtc_apply"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            app:ringColor="#4D208FFF"
            app:ringWidthPercent="0.2"
            app:text="上\n讲台"
            app:textBgColorEnd="#20D1FF"
            app:textBgColorStart="#3B97FF"
            app:textColor="@color/white"
            app:textSize="@dimen/sp_10" />

        <com.talkfun.widget.HoloView
            android:id="@+id/iv_orperator_rtc_down"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            app:ringColor="#4DFF7E3B"
            app:ringWidthPercent="0.2"
            app:text="下\n讲台"
            app:textBgColor="#FF7E3B"
            app:textColor="@color/white"
            app:textSize="@dimen/sp_10" />
    </LinearLayout>
</layout>