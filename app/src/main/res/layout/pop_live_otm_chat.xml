<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/otm_pop_bg"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_chat_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/pop_live_otm_chat_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:hint="@string/pop_live_otm_chat_input_hint"
            android:textColor="@color/white"
            android:textColorHint="#6D829E"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_emoticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:layout_toLeftOf="@+id/btn_send"
                android:src="@mipmap/pop_otm_chat_pop_expression" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_3"
                android:background="@drawable/pop_live_otm_chat_send_bg"
                android:text="@string/btn_send"
                android:textColor="@color/white" />

            <!--    <ImageView
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:background="#BBD2FF" />

                <ImageView
                    android:id="@+id/iv_shortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_7"
                    android:src="@mipmap/shortcut_tip" />
            </LinearLayout>-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>